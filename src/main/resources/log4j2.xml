<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Appenders>
    <File name="File" fileName="logs/output.log" bufferedIO="true" advertiseURI="logs/output.log" advertise="true">
        <PatternLayout pattern="[%d{dd.MM.y HH:mm:ss.SSS}] [%t] [%-5level %logger %L] - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>